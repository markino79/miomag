<?xml version="1.0"?>
<config>
    <modules>
        <Artera_View>
            <version>0.1.0</version>
        </Artera_View>
    </modules>
    <frontend>
        <routers>
            <view>
                <use>standard</use>
                <args>
                    <module>Artera_View</module>
                    <frontName>view</frontName>
                </args>
            </view>
        </routers>
        <layout>
            <updates>
                <view>
                    <file>view.xml</file>
                </view>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<view>
				<use>admin</use>
				<args>
					<module>Artera_View</module>
					<frontName>view</frontName>
				</args>
			</view>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<view module="view">
				<title>View</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="view">
						<title>Manage Items</title>
						<sort_order>0</sort_order>
						<action>view/adminhtml_view</action>
					</items>
				</children>
			</view>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Artera_View>
							<title>View Module</title>
							<sort_order>10</sort_order>
						</Artera_View>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<view>
					<file>view.xml</file>
				</view>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <view>
                <class>Artera_View_Model</class>
                <resourceModel>view_mysql4</resourceModel>
            </view>
            <view_mysql4>
                <class>Artera_View_Model_Mysql4</class>
                <entities>
                    <view>
                        <table>view</table>
                    </view>
                </entities>
            </view_mysql4>
        </models>
        <resources>
            <view_setup>
                <setup>
                    <module>Artera_View</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </view_setup>
            <view_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </view_write>
            <view_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </view_read>
        </resources>
        <blocks>
            <view>
                <class>Artera_View_Block</class>
            </view>
        </blocks>
        <helpers>
            <view>
                <class>Artera_View_Helper</class>
            </view>
        </helpers>
    </global>
</config>